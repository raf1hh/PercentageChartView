<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.ramijemli.sample.activity.HalfRingTestActivity">

    <com.ramijemli.percentagechartview.PercentageChartView
        android:id="@+id/chart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="24dp"

        app:pcv_backgroundBarThickness="20dp"
        app:pcv_mode="halfring"
        app:pcv_progress="20"
        app:pcv_progressBarThickness="20dp"
        app:pcv_startAngle="180"
        app:pcv_textSize="50sp"
        app:pcv_progressBarStyle="square"/>

</RelativeLayout>
